	{% extends "layout.html.twig" %}
		{% block title %}{{ title }}{% endblock %}

		{% block content %}
			{% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {{ form_start(articleForm)}}
            	
            	<div class="form-group">
            	{# affichage des éventuelles erreurs pour le champ titre #}
            	{{ form_errors(articleForm.title) }}
            	{# customisation du champ titre #}
            	{{ form_widget(articleForm.title,
            		{
            			'attr': {
            				'class': 'form-control',
            				'placeholder': 'entrez votre titre'
            			}
            		}
            	)}}
            	</div>

            	<div class="form-group">
            		{# affichage des éventuelles erreurs pour le champ contenu #}
            		{{ form_errors(articleForm.content) }}
            		{# customisation du champ contenu #}
                    {{ form_widget(articleForm.content, 
                    	{ 
                    		'attr':  {
                        		'rows': '4',
                        		'class': 'form-control',
                        		'placeholder': 'Enter your content'
                    }}) }}
            	</div>

            	{{ form_widget(articleForm.Enregistrer,
            		{ 
                    		'attr':  {
                        		'class': 'btn btn-default'
                    }}
            	)}}

			{{ form_end(articleForm)}}
		{% endblock %}


		